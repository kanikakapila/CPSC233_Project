<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>  
<?import javafx.collections.FXCollections?>



<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8">
   <children>
      <Label text="Performance Screen">
         <font>
            <Font size="19.0" />
         </font>
      </Label>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label prefHeight="45.0" prefWidth="376.0" text="Your Engine Size (in Cubic Centimeters): ">
               <font>
                  <Font size="19.0" />
               </font>
            </Label>
            <Slider majorTickUnit="500.0" max="5000.0" min="1000.0" minorTickCount="0" prefHeight="75.0" prefWidth="368.0" showTickLabels="true" showTickMarks="true" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="1819.0">
         <children>
            <Label text="Method of Fuel"/> 
            
            <ChoiceBox fx:id="FXCollections" prefHeight="39.0" prefWidth="158.0">
            	<items>
            		<FXCollections fx:factory="observableArrayList"> 
            			<String fx:value = "Diesel"/>
            			<String fx:value = "Petrol"/> 
            			<String fx:value = "Electric"/> 
            			<String fx:value = "Hybrid"/> 
            			
            		</FXCollections>
            	</items> 
           
            </ChoiceBox>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Type of tires included in the pakage :">
               <font>
                  <Font size="19.0" />
               </font>
            </Label>
            <CheckBox mnemonicParsing="false" text="Summer Tires">
               <HBox.margin>
                  <Insets left="3.0" />
               </HBox.margin>
            </CheckBox>
            <CheckBox mnemonicParsing="false" text="Winter Tires">
               <HBox.margin>
                  <Insets left="3.0" />
               </HBox.margin>
            </CheckBox>
            <CheckBox mnemonicParsing="false" text="Off-Road">
               <HBox.margin>
                  <Insets left="3.0" />
               </HBox.margin>
            </CheckBox>
            <CheckBox mnemonicParsing="false" text="Performance Tire">
               <HBox.margin>
                  <Insets left="3.0" />
               </HBox.margin>
            </CheckBox>
            <CheckBox mnemonicParsing="false" text="All-Season Tires (Regular)">
               <HBox.margin>
                  <Insets left="3.0" />
               </HBox.margin>
            </CheckBox>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Transmission Type: ">
               <font>
                  <Font size="19.0" />
               </font>
            </Label>
            <ToggleButton mnemonicParsing="false" text="Automatic">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </ToggleButton>
            <ToggleButton mnemonicParsing="false" text="Manual">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </ToggleButton>
            <ToggleButton mnemonicParsing="false" text="Dual Transmission">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </ToggleButton>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Horsepower :">
               <font>
                  <Font size="19.0" />
               </font>
            </Label>
            <TextField prefHeight="24.0" prefWidth="224.0">
               <HBox.margin>
                  <Insets left="5.0" top="5.0" />
               </HBox.margin>
            </TextField>
            <Label text="HP">
               <HBox.margin>
                  <Insets bottom="14.0" />
               </HBox.margin>
               <font>
                  <Font size="19.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <Button mnemonicParsing="false" text="Proceed To Appearance" />
   </children>
</VBox>
